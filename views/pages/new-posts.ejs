<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body>
    <div class="flex flex-col max-h-screen">
    <%- include('../partials/header'); %>
    <!-- Main Body -->
    <div class="grow overflow-y-scroll">
      <% for (var post of posts) { %>
        <hr />
        <div>
          <div style="width:100%; padding: 10px;">
            <div style="display:flex; justify-content:space-between;">
              <div style="display:flex;">
                <img width="49px" height="49px" src="<%= post.imageUrl %>" style="border: 2px solid #ff0099; border-radius:50%" />
                <div>
                  <span style="font-weight:bold; font-family:Kaisai Decol; color:#ff0099; padding-left:10px;"><%= post.user.userName %></span>
                  <br />
                  <span><%- post.title %></span>
                </div>
              </div>
              <span style="font-size: small; margin-left:20px;"><%= post.insertDate.toLocaleString("ja-JP") %></span>
            </div>
          </div>
        </div>
      <% } %>
    </div>
    <%- include('../partials/footer', {currentMenu: 2}); %>
    </div>
  </body>
</html>
