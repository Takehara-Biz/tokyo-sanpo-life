<div id="content">
  <div id="bodyContent" class="flex justify-between">
    <img src='<%= post.imageUrl %>' width='50%' />
    <div class="w-1/2 p-2">
      <%- include('../partials/user-icon-name', {iconUrl: post.user.iconUrl, userName: post.user.userName}) %>
      <p class="text-sm">
        <%= post.insertDate.toLocaleString("ja-JP") %>
      </p>
    </div>
  </div>
  <div class="p-2">
    <p class="w-full break-words">
      <%= post.description %>
    </p>
    <div>
      <p class="m-2 text-center text-sm">コメント</p>
      <%- include('./comments-list'); %>
    </div>
    <hr />
    <%- include('./add-comment-section'); %>
  </div>
</div>