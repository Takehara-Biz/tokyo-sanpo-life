<div class="mx-3">
  <a class="mt-3 w-full btn bg-accent text-white h-12" role="button"
    href="<%= href %>" 
    <% if (locals.onClickCode != undefined) { %>onclick="<%= onClickCode %>"<% } %> 
    style="background-color: <% if (locals.important != undefined) { %>red<% } else { %>#ff0099<% } %>; height: 48px;">
    <div class="flex justify-center items-center h-full" style="height: 100%;">
    <% if (locals.googleIconName != undefined) { %>
      <span class="material-symbols-outlined align-[-6px]">
        <%= googleIconName %>
      </span>
    <% } %>
    &nbsp;
    <%= label %>
  </div>
  </a>
</div>